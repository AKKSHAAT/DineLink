{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "outDir": "./dist",  // Build folder for the frontend
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true, 
    "skipLibCheck": true,
  },
  "exclude": [
    "backend",  // Explicitly exclude the backend folder
    "node_modules"
  ]
}
